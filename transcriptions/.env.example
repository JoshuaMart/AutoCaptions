# Environment Configuration
NODE_ENV=development
PORT=3001

# Transcription Service Configuration
TRANSCRIPTION_SERVICE=whisper-cpp
# Available options: "openai-whisper" or "whisper-cpp"

# OpenAI Configuration (required if using openai-whisper)
OPENAI_API_KEY=your_openai_api_key_here

# Whisper.cpp Configuration (required if using whisper-cpp)
WHISPER_CPP_VERSION=1.7.5
WHISPER_MODEL=medium
# Available models: tiny, tiny.en, base, base.en, small, small.en, medium, medium.en, large-v1, large-v2, large-v3, large-v3-turbo

# File Upload Configuration
MAX_FILE_SIZE=524288000
# 500MB in bytes (500 * 1024 * 1024)

UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/transcription.log
