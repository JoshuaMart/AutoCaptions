{
  "name": "neon",
  "displayName": "Neon",
  "description": "Vibrant neon styling with thick borders and lighting effects",
  "defaults": {
    "fontFamily": "Bebas Neue",
    "fontSize": 85,
    "textColor": "00FFFF",
    "outlineColor": "FF00FF",
    "outlineWidth": 8,
    "activeWordColor": "FFFF00",
    "activeWordOutlineWidth": 12,
    "position": "center",
    "positionOffset": 250,
    "marginHorizontal": 25,
    "bold": true,
    "uppercase": true,
    "backgroundColor": "000033",
    "backgroundOpacity": 80
  },
  "customizable": [
    {
      "key": "fontFamily",
      "type": "font",
      "label": "Font"
    },
    {
      "key": "fontSize",
      "type": "number",
      "label": "Size",
      "min": 60,
      "max": 150
    },
    {
      "key": "textColor",
      "type": "color",
      "label": "Text color"
    },
    {
      "key": "activeWordColor",
      "type": "color",
      "label": "Current word color"
    },
    {
      "key": "outlineColor",
      "type": "color",
      "label": "Border color"
    },
    {
      "key": "outlineWidth",
      "type": "number",
      "label": "Border thickness",
      "min": 0,
      "max": 25
    },
    {
      "key": "position",
      "type": "select",
      "label": "Base position",
      "options": ["top", "center", "bottom"]
    },
    {
      "key": "positionOffset",
      "type": "number",
      "label": "Vertical offset (+ down, - up)",
      "min": -500,
      "max": 500
    },
    {
      "key": "backgroundColor",
      "type": "color",
      "label": "Background color"
    },
    {
      "key": "backgroundOpacity",
      "type": "number",
      "label": "Background opacity (%)",
      "min": 0,
      "max": 100
    }
  ]
}
