{
  "name": "simple",
  "displayName": "Simple",
  "description": "White text with black border, current word in yellow",
  "defaults": {
    "fontFamily": "Arial Black",
    "fontSize": 80,
    "textColor": "FFFFFF",
    "outlineColor": "000000",
    "outlineWidth": 5,
    "activeWordColor": "FFFF00",
    "activeWordOutlineWidth": 5,
    "position": "center",
    "positionOffset": 300,
    "marginHorizontal": 20,
    "bold": true,
    "uppercase": true
  },
  "customizable": [
    {
      "key": "fontFamily",
      "type": "font",
      "label": "Police"
    },
    {
      "key": "fontSize",
      "type": "number",
      "label": "Taille",
      "min": 40,
      "max": 120
    },
    {
      "key": "textColor",
      "type": "color",
      "label": "Text color"
    },
    {
      "key": "activeWordColor",
      "type": "color",
      "label": "Active Word Color"
    },
    {
      "key": "outlineWidth",
      "type": "number",
      "label": "Border thickness",
      "min": 0,
      "max": 20
    },
    {
      "key": "position",
      "type": "select",
      "label": "Base position",
      "options": ["top", "center", "bottom"]
    },
    {
      "key": "positionOffset",
      "type": "number",
      "label": "Vertical offset (+ down, - up)",
      "min": -500,
      "max": 500
    }
  ]
}
