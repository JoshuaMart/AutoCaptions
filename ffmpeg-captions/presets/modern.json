{
  "name": "modern",
  "displayName": "Modern",
  "description": "Modern styling with semi-transparent background and subtle animations",
  "defaults": {
    "fontFamily": "Inter",
    "fontSize": 75,
    "textColor": "FFFFFF",
    "outlineColor": "000000",
    "outlineWidth": 3,
    "activeWordColor": "00D4FF",
    "activeWordOutlineWidth": 4,
    "position": "center",
    "positionOffset": 350,
    "marginHorizontal": 30,
    "bold": true,
    "uppercase": false,
    "backgroundColor": "000000",
    "backgroundOpacity": 60
  },
  "customizable": [
    {
      "key": "fontFamily",
      "type": "font",
      "label": "Font"
    },
    {
      "key": "fontSize",
      "type": "number",
      "label": "Size",
      "min": 50,
      "max": 140
    },
    {
      "key": "textColor",
      "type": "color",
      "label": "Text color"
    },
    {
      "key": "activeWordColor",
      "type": "color",
      "label": "Current word color"
    },
    {
      "key": "outlineWidth",
      "type": "number",
      "label": "Border thickness",
      "min": 0,
      "max": 15
    },
    {
      "key": "position",
      "type": "select",
      "label": "Base position",
      "options": ["top", "center", "bottom"]
    },
    {
      "key": "positionOffset",
      "type": "number",
      "label": "Vertical offset (+ down, - up)",
      "min": -500,
      "max": 500
    },
    {
      "key": "uppercase",
      "type": "boolean",
      "label": "Uppercase"
    },
    {
      "key": "backgroundColor",
      "type": "color",
      "label": "Background color"
    },
    {
      "key": "backgroundOpacity",
      "type": "number",
      "label": "Background opacity (%)",
      "min": 0,
      "max": 100
    }
  ]
}
